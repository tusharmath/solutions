doctype html
html(lang='en')
    head
        title Solutions with truth
        link(rel="stylesheet" type="text/css" href="/public/less/main.css")
    body(ng-app="pay-pal")
        .container-fluid(ng-controller="AddressBookController")
            h1 Address Book
            .panel.panel-default
                .panel-heading
                    .row
                        .col-sm-6
                            .panel-title
                                strong All Contacts
                                button.btn.pull-right.btn-default.btn-sm(ng-click="create=true") Create
                        .col-sm-6
                            button.btn.pull-right.btn-warning.btn-sm(ng-click="edit=true" ng-hide="edit || create") Edit
                            button.btn.pull-right.btn-primary.btn-sm(ng-click="edit=true; save()" ng-show="create") Save
                            button.btn.pull-right.btn-primary.btn-sm(ng-click="edit=true" ng-show="edit") Update
                            button.btn.pull-right.btn-warning.btn-sm(ng-click="edit=false; create=false" ng-show="edit || create") Cancel
                .panel-body
                    .row
                        .col-sm-6
                            contact-search
                        .col-sm-6
                            contact-details(ng-hide="edit || create")
                            contact-create(ng-show="create")
        script(src="/public/scripts/app.js")