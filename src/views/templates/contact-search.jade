div
    form
        .form-group
            input.form-control(type="text" placeholder="Search" ng-model="searchText")
div
    strong {{major}}
    span {{ctrl.contacts}}
    ul.list-group
        li.list-group-item(ng-repeat="c in contacts | filter: searchText")
            a.text-capitalize(href="#" ng-click="setSelected(c._id)") {{c.first_name}}&nbsp;{{c.last_name}}